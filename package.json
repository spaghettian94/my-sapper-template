{
  "license": "MIT",
  "name": "sapper-app",
  "description": "Sapper App",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev --no-hot",
    "build": "sapper build",
    "export": "sapper export",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "lint": "npm-run-all -c lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,svelte}'",
    "lint:stylelint": "stylelint 'src/**/*.{css,scss,svelte}'",
    "lint:prettier": "prettier --check 'src/**/*.{js,scss,svelte}'",
    "format": "npm-run-all -c format:*",
    "format:eslint": "eslint --fix 'src/**/*.{js,svelte}'",
    "format:stylelint": "stylelint --fix 'src/**/*.{css,scss,svelte}'",
    "format:prettier": "prettier --write 'src/**/*.{js,scss,svelte}'"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "^1.0.0-next.9",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.0",
    "prettier-stylelint": "^0.4.2",
    "sapper": "^0.27.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-property-sort-order-smacss": "^5.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.12.1",
    "svelte": "^3.0.0",
    "svelte-loader": "^2.9.0",
    "svelte-preprocess": "^3.2.2",
    "webpack": "^4.7.0"
  }
}
